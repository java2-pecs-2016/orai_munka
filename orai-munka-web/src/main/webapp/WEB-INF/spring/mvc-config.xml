<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">
	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/book/" />
		<property name="suffix" value=".jsp" />
	</bean>

	<bean id="bookDaoImpl" class="hu.sol.mik.book.dao.impl.BookDaoImpl">
	</bean>

	<bean id="bookController" class="hu.sol.mik.book.controller.BookController">
		<constructor-arg name="bookDao" ref="bookDaoImpl"></constructor-arg>
	</bean>
</beans>